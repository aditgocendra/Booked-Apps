<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:translationZ="1dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_edit_wallet"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                android:layout_margin="2.5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_edit_note_24"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_delete_wallet"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                android:layout_margin="2.5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_delete_outline_24"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wallet"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            app:tint="@color/blue_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/name_wallet_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Shoope"
                android:textSize="14sp"
                android:drawablePadding="3sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/light_text"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/wallet_number_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="0895485455123"
                android:drawablePadding="3sp"
                android:layout_marginEnd="5dp"
                android:maxLength="13"
                android:textSize="14sp"
                android:gravity="end|center"
                android:textColor="@color/blue"
                android:layout_weight="1"
                app:drawableEndCompat="@drawable/ic_baseline_content_copy_24" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>