<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/card_pay_norek"
            android:layout_weight="1"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/name_bank_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Mandiri"
            android:drawableLeft="@drawable/ic_baseline_credit_card_24"
            android:textSize="14sp"
            android:drawablePadding="3sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/light_text"/>

        <TextView
            android:id="@+id/rek_no_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="1851213543213135"
            android:drawableEnd="@drawable/ic_baseline_content_copy_24"
            android:drawablePadding="3sp"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:gravity="end|center"
            android:textColor="@color/blue"/>

    </LinearLayout>




</androidx.cardview.widget.CardView>