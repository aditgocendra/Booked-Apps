<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_package_detail_home"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="11dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/thumbs_image_pakage_home"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:src="@drawable/image_paket"
            android:scaleType="centerCrop"/>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/name_package_tv_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12sp"
                android:text="Paket A"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/price_package_tv_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12sp"
                android:text="Rp. 4.000.000"
                android:layout_weight="1"
                android:textAlignment="textEnd"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>