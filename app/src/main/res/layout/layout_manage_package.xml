<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_manage_package"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--ITEM LAYOUT-->

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="11dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:translationZ="1dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:translationZ="1dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_edit_package"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="2dp"
                        android:layout_marginEnd="2.5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_edit_note_24"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_delete_package"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="2dp"
                        android:layout_marginStart="2.5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_delete_outline_24"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/thumbs_image_package"
                    android:layout_width="match_parent"
                    android:layout_height="148dp"
                    android:src="@drawable/image_paket"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginEnd="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name_package_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12sp"
                        android:text="Paket A"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/price_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12sp"
                        android:text="Rp. 4.000.000"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"/>


                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>