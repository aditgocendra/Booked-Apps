<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="11dp"
    app:cardElevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/token_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/women"
                android:layout_weight="0"/>

            <TextView
                android:id="@+id/user_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liasawita"
                android:textStyle="bold"
                android:textSize="12sp"
                android:maxLength="14"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"/>

            <TextView
                android:id="@+id/status_tv_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menunggu Konfirmasi Admin"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/alert_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_notification_important_24"
                android:layout_weight="0"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/thumbs_image_pakage_order"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/image_paket"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/name_package_tv_manage_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:text="Paket A"/>

                <TextView
                    android:id="@+id/price_package_tv_manage_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp"
                    android:text="Rp. 4.000.000"/>

                <TextView
                    android:id="@+id/date_tv_manage_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp"
                    android:gravity="end"
                    android:text="12 Jan 2022"/>

                <TextView
                    android:id="@+id/time_tv_manage_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="end"
                    android:textSize="12sp"
                    android:text="13.00 PM"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <Button
                android:id="@+id/confirm_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konfirmasi Pembayaran"
                android:visibility="gone"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/poppins_medium" />

            <Button
                android:id="@+id/order_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pemesanan Selesai"
                android:visibility="gone"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/poppins_medium" />

            <Button
                android:id="@+id/cancel_manage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tolak"
                android:backgroundTint="@color/blue_light"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/confirm_manage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terima"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>