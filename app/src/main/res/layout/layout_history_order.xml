<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_package_detail_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="11dp"
    app:cardElevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/women"
                android:layout_weight="0"/>

            <TextView
                android:id="@+id/username_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liasawita"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"/>

            <TextView
                android:id="@+id/status_tv_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pesanan selesai"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_gravity="center_vertical"
                android:textColor="@color/blue"
                android:gravity="end"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/alert_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_notification_important_24"
                android:layout_weight="0"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/thumbs_image_pakage_history"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/image_paket"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/name_package_tv_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    android:text="Paket A"/>

                <TextView
                    android:id="@+id/price_package_tv_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp"
                    android:text="Rp. 4.000.000"/>

                <TextView
                    android:id="@+id/date_tv_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp"
                    android:gravity="end"
                    android:text="12 Jan 2022"/>

                <TextView
                    android:id="@+id/time_tv_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="end"
                    android:textSize="12sp"
                    android:text="13.00 PM"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pembayaran"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"/>

                <TextView
                    android:id="@+id/pay_tv_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telah dibayar"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_regular"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_delete_history"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    android:layout_marginStart="2.5dp"
                    android:layout_margin="3sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_delete_outline_24"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>





        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>